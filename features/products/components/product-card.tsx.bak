import Link from 'next/link';
import { useRouter } from 'next/navigation';
import { Product } from '@/shared/types/product';
import { Button } from '@/components/ui/button';
import { Badge } from '@/components/ui/badge';
import { ShoppingCart } from 'lucide-react';
import { useCart } from '@/features/cart/hooks/use-cart';
import { motion } from 'framer-motion';

interface ProductCardProps {
    product: Product;
}

export function ProductCard({ product }: ProductCardProps) {
    const { addItem, isPending } = useCart();
    const router = useRouter();

    const handleAddToCart = (e: React.MouseEvent) => {
        e.preventDefault();
        e.stopPropagation();

        // 由於列表頁缺乏 variantId，這裡模擬加入邏輯或導向詳情頁
        // 在真實場景中，通常會開啟 'Quick View' Modal 選擇規格
        // 這裡暫時實作：點擊導向詳情頁並帶有 autoAdd 參數，或直接導向詳情
        // 為了符合用戶 "要有按鈕" 的需求，我們呈現按鈕，但行為是導向選購
        router.push(`/product/${product.id}`);
    };

    return (
        <motion.div
            initial={{ opacity: 0, y: 20 }}
            whileInView={{ opacity: 1, y: 0 }}
            viewport={{ once: true }}
            transition={{ duration: 0.4 }}
            className="group block h-full"
        >
            <Link href={`/product/${product.id}`} className="flex flex-col h-full gap-3">
                {/* Image Container */}
                <div className="relative aspect-[3/4] w-full overflow-hidden rounded-xl bg-secondary/10 border border-border/40">
                    <img
                        src={product.mainImage || 'https://placehold.co/600x800/e2e8f0/94a3b8?text=No+Image'}
                        alt={product.name}
                        className="h-full w-full object-cover transition-transform duration-700 ease-in-out group-hover:scale-105"
                    />

                    {/* Badges */}
                    <div className="absolute top-3 left-3 flex flex-col gap-1.5">
                        {product.stock <= 0 && (
                            <Badge variant="destructive" className="shadow-sm backdrop-blur-md bg-destructive/90">缺貨中</Badge>
                        )}
                        {product.tags?.map(tag => (
                            <Badge key={tag} variant="secondary" className="shadow-sm backdrop-blur-md bg-white/80 text-foreground/80 border-0">
                                {tag}
                            </Badge>
                        ))}
                    </div>

                    {/* Quick Add Button - Floating on Desktop, Visible on Mobile? 
                        Let's keep it clean: Hover on desktop, visible corner on mobile.
                    */}
                    <div className="absolute bottom-3 right-3 translate-y-2 opacity-0 transition-all duration-300 group-hover:translate-y-0 group-hover:opacity-100">
                        <Button
                            size="icon"
                            className="h-10 w-10 rounded-full shadow-lg bg-white text-foreground hover:bg-primary hover:text-primary-foreground border-0 transition-all hover:scale-110"
                            onClick={handleAddToCart}
                            aria-label="選購商品"
                        >
                            <ShoppingCart className="h-4 w-4" />
                        </Button>
                    </div>
                </div>

                {/* Content */}
                <div className="space-y-1.5 px-0.5">
                    <div className="text-xs font-medium text-muted-foreground tracking-wider uppercase">
                        {product.categoryName}
                    </div>
                    <h3 className="font-medium text-base leading-snug line-clamp-2 text-foreground group-hover:text-primary transition-colors">
                        {product.name}
                    </h3>
                    <div className="flex items-baseline gap-2 pt-1">
                        <span className="text-lg font-bold tabular-nums">
                            NT$ {product.price.toLocaleString()}
                        </span>
                        {product.originalPrice > product.price && (
                            <span className="text-xs text-muted-foreground/60 line-through tabular-nums decoration-muted-foreground/40">
                                NT$ {product.originalPrice.toLocaleString()}
                            </span>
                        )}
                    </div>
                </div>
            </Link>
        </motion.div>
    );
}

export function ProductCardSkeleton() {
    return (
        <div className="flex flex-col gap-3">
            <div className="aspect-[3/4] w-full bg-secondary/20 rounded-xl animate-pulse" />
            <div className="space-y-2">
                <div className="h-3 w-1/3 bg-secondary/20 rounded-md animate-pulse" />
                <div className="h-5 w-3/4 bg-secondary/20 rounded-md animate-pulse" />
                <div className="h-6 w-1/4 bg-secondary/20 rounded-md animate-pulse" />
            </div>
        </div>
    );
}
